%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:speakers, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:speakers, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:speakers, :edit, :id => @speaker.id)

.tabs-content
  -form_for :speaker, url(:speakers, :update, :id => @speaker.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'speakers/form', :locals => { :f => f }
